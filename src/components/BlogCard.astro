---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
  index?: number;
}

const { post, index = 0 } = Astro.props;
const { title, description, pubDate, tags } = post.data;

// Format the date
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  timeZone: 'UTC'
});
---

<div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow duration-300">
  <div class="card-body p-6">
    <header class="flex justify-between items-start gap-4 mb-3">
      <h2 class="card-title text-xl">{title}</h2>
      <time class="text-sm text-base-content/60 whitespace-nowrap">{formattedDate}</time>
    </header>

    <p class="text-base-content/80 line-clamp-2">{description}</p>

    <footer class="mt-auto pt-4">
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map((tag: string) => (
          <a 
            href={`/blog/tag/${tag}`}
            class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-base-300 hover:bg-base-400 transition-colors duration-200 gap-1.5 border border-base-400"
          >
            {tag}
          </a>
        ))}
      </div>
      <div class="card-actions justify-end border-t border-base-300 pt-4">
        <a href={`/blog/${post.slug}`} class="btn btn-primary btn-sm">Read More</a>
      </div>
    </footer>
  </div>
</div>