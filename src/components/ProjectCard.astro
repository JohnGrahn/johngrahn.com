---
import { Icon } from 'astro-icon/components';
import { techIconMap } from '../utils/techIcons';

interface Props {
    project: {
        title: string;
        description: string;
        liveDemoUrl: string;
        githubUrl: string;
        techStack: string[];
        slug?: string;
    };
    index?: number;
}

const { project, index = 0 } = Astro.props;
const { title, description, liveDemoUrl, githubUrl, techStack, slug } = project;
---

<div class="h-[180px] w-full">
  <a href={`/projects/${slug}`} class="block h-full w-full group">
    <article class="card h-full w-full transition-all duration-300 hover:shadow-lg">
      <div class="card-body bg-base-200 group-hover:bg-base-300 rounded-xl p-4 h-full">
        <div class="flex flex-col justify-between h-full">
          <div class="space-y-2">
            <h2 class="card-title text-base md:text-lg font-bold text-base-content group-hover:text-primary transition-colors duration-200 line-clamp-2">
              {title}
            </h2>

            <p class="text-sm text-base-content/70 line-clamp-2">
              {description}
            </p>
          </div>

          {/* Tech stack section commented out for future use */}
