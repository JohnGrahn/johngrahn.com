---
import Layout from '../layouts/Layout.astro';
import ResumeContent from '../components/ResumeContent.astro';

// PDF file URL
const pdfUrl = '/JohnGrahnResume.pdf';
---

<Layout title="Resume">
  <div class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href={pdfUrl} class="btn btn-primary w-full sm:w-auto" target="_blank" rel="noopener noreferrer">
          View PDF Version
        </a>
        <button class="btn btn-secondary w-full sm:w-auto" onclick="window.print()">Print Resume</button>
      </div>
    </div>
    
    <ResumeContent />
  </div>
</Layout> 